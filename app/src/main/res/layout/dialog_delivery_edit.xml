<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/et_receipt"
            android:layout_below="@+id/textView14"
            android:layout_marginTop="18dp"
            android:text="Enter Goods Receipt No."
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/textView"
            android:layout_marginTop="28dp"
            android:text="Update Delivery Status"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_receipt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:ems="10"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btnDeliver"
            style="@android:style/Widget.Material.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/et_receipt"
            android:layout_below="@+id/et_receipt"
            android:layout_marginTop="15dp"
            android:text="Delivered" />

        <Button
            android:id="@+id/btnClose"
            style="@android:style/Widget.Material.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/btnDeliver"
            android:layout_alignTop="@+id/btnDeliver"
            android:layout_toStartOf="@+id/btnDeliver"
            android:text="Close"
            android:textColor="@color/colorPrimary" />
    </RelativeLayout>
</LinearLayout>