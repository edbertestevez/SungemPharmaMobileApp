<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <TextView
        android:id="@+id/txtProBrand"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:text="TextView"
        android:textColor="#000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tdxfds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtProFormulation"
        android:layout_below="@+id/txtQtyDesc"
        android:layout_marginRight="20dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:text="Sales:"
        android:textColor="#000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txtProGeneric"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtProBrand"
        android:layout_marginStart="8dp"
        android:text="TextView"
        android:textColor="#696969"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txtProFormulation"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtProGeneric"
        android:layout_marginStart="8dp"
        android:text="TextView"
        android:textColor="#696969" />

    <TextView
        android:id="@+id/txtProSales"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tdxfds"
        android:layout_below="@+id/txtQtyDesc"
        android:layout_marginStart="45dp"
        android:paddingTop="5dp"
        android:text="TextView"
        android:textColor="#696969"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txtQtyDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="5dp"
        android:paddingTop="10dp"
        android:text="Quantity:"
        android:textColor="#000"
        android:textSize="16sp"
        android:visibility="visible"
        android:layout_alignBaseline="@+id/txtProQty"
        android:layout_alignBottom="@+id/txtProQty"
        android:layout_alignStart="@+id/tdxfds" />

    <TextView
        android:id="@+id/txtProQty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:text="TextView"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="visible"
        android:layout_below="@+id/txtProFormulation"
        android:layout_toEndOf="@+id/tdxfds" />

</RelativeLayout>
