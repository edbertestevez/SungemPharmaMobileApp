<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <TextView
            android:id="@+id/textView44"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView69"
            android:text="Expiry Date: "
            android:textColor="#555"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView69"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Lot No: "
            android:textColor="#555"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtLotNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="#323232"
            android:textSize="16sp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/textView69" />

        <TextView
            android:id="@+id/txtLotExpiry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView44"
            android:layout_alignBottom="@+id/textView44"
            android:layout_toEndOf="@+id/textView44"
            android:text="TextView"
            android:textColor="#323232"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtLotQty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="TextView"
            android:textColor="#000"
            android:textSize="16sp" />
    </RelativeLayout>
</LinearLayout>