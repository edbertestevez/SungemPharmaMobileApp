<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sungem.sungempharma.Medrep.Performance.PerformanceMainFragment">

    <!-- TODO: Update blank fragment layout -->

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/relativeLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/myImage"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center"
                    android:paddingTop="0dp" />

                <TextView
                    android:id="@+id/txtMedrep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/myImage"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="24dp"
                    android:layout_toEndOf="@+id/myImage"
                    android:text="Edbert Jason Estevez"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView61"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/txtMedrep"
                    android:layout_below="@+id/txtMedrep"
                    android:text="Medical Representative"
                    android:textAlignment="center"
                    android:textSize="14sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/relativeLayout3"
                android:background="#fff"
                android:paddingBottom="25dp">

                <TextView
                    android:id="@+id/textView58"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView68"
                    android:paddingLeft="20dp"
                    android:text="Medicine Sales:"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txtMonth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="20dp"
                    android:layout_toStartOf="@+id/txtProSales"
                    android:text="Performance Statistics"
                    android:textAlignment="textStart"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txtProSales"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/txtDate"
                    android:layout_marginTop="30dp"
                    android:paddingEnd="24dp"
                    android:text="N/A"
                    android:textAlignment="textEnd"
                    android:textColor="#000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textView67"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/txtProSales"
                    android:layout_alignBottom="@+id/txtProSales"
                    android:layout_alignParentStart="true"
                    android:capitalize="characters"
                    android:paddingLeft="20dp"
                    android:text="Total Sales:"
                    android:textAlignment="viewStart"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView68"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView76"
                    android:paddingLeft="20dp"
                    android:text="Products Sold:"
                    android:textAlignment="viewStart"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txtDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/txtMonth"
                    android:layout_below="@+id/txtMonth"
                    android:text="COMMISSION"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txtProducts"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/txtDelivery"
                    android:paddingEnd="24dp"
                    android:text="N/A"
                    android:textAlignment="textEnd"
                    android:textColor="#000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textView76"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView74"
                    android:layout_marginTop="15dp"
                    android:paddingLeft="20dp"
                    android:text="Deliveries Made:"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txtDelivery"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/txtCommission"
                    android:layout_marginTop="15dp"
                    android:paddingEnd="24dp"
                    android:text="N/A"
                    android:textAlignment="textEnd"
                    android:textColor="#000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textView74"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView67"
                    android:paddingLeft="20dp"
                    android:text="Commission:"
                    android:textAlignment="viewStart"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtCommission"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/txtProSales"
                    android:paddingEnd="24dp"
                    android:text="N/A"
                    android:textAlignment="textEnd"
                    android:textColor="#000"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btnSales"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView58"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="60dp"
                    android:background="@color/colorAccent"
                    android:text="VIEW SALES"
                    android:textColor="#fff" />

                <TextView
                    android:id="@+id/txtMedSales"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/textView58"
                    android:layout_alignParentEnd="true"
                    android:layout_alignStart="@+id/txtProducts"
                    android:paddingEnd="24dp"
                    android:text="N/A"
                    android:textAlignment="textEnd"
                    android:textColor="#000"
                    android:textSize="16sp" />
            </RelativeLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</FrameLayout>
