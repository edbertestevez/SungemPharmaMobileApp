<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txtProBrand"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:textColor="#000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txtProdQty"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btnDetails"
        android:layout_alignStart="@+id/btnDetails"
        android:layout_alignTop="@+id/txtProBrand"
        android:text="18"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txtProGeneric"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtProBrand"
        android:layout_marginStart="24dp"
        android:text="TextView"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txtProFormulation"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtProGeneric"
        android:layout_marginStart="24dp"
        android:text="TextView" />

    <Button
        android:id="@+id/btnDetails"
        style="@android:style/Widget.Material.Light.Button.Borderless.Colored"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/txtProBrand"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="more details"
        android:textAlignment="center"
        android:textColor="#3c8ced" />

</RelativeLayout>
