<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp"
    android:layout_marginTop="3dp"
    android:clickable="true"
    android:fadingEdge="vertical"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/txtClient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Client Name"
            android:textColor="#000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtExpiringCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/txtClient"
            android:layout_below="@+id/txtClient"
            android:layout_marginTop="10dp"
            android:text="Invoice No."
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtInvoiceId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/txtExpiringCount"
            android:layout_toEndOf="@+id/txtExpiringCount"
            android:text="TextView"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView27"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView29"
            android:layout_marginTop="24dp"
            android:text="Remaining Balance:"
            android:textColor="#000" />

        <TextView
            android:id="@+id/txtRemaining"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView27"
            android:layout_alignBottom="@+id/textView27"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/textView27"
            android:text="P1500"
            android:textColor="#000" />

        <TextView
            android:id="@+id/textView29"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txtExpiringCount"
            android:text="Due Date:"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtDue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView29"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/textView29"
            android:text="2015/12/11"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnView"
            style="@android:style/Widget.Material.Light.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/txtRemaining"
            android:layout_alignBottom="@+id/txtRemaining"
            android:layout_alignParentEnd="true"
            android:text="more details"
            android:textColor="#3c8ced" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
