<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/txtPaymode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="17dp"
        android:text="CASH"
        android:textColor="#000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txtAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView21"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/txtPaymode"
        android:text="TextView"
        android:textColor="#000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtPaymode"
        android:layout_below="@+id/txtPaymode"
        android:layout_marginTop="5dp"
        android:text="Payment Date:" />

    <TextView
        android:id="@+id/txtPaydate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView21"
        android:layout_alignBottom="@+id/textView21"
        android:layout_marginLeft="8dp"
        android:layout_toEndOf="@+id/textView21"
        android:text="TextView" />
</RelativeLayout>